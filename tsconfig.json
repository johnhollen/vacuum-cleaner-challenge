{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "target": "ES6",
    "lib": ["ES2019"],
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
